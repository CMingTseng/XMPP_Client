<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jersuen.im.ui.UserActivity">

    <LinearLayout
            android:id="@+id/activity_user_avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            >
        <com.jersuen.im.ui.view.RoundedImageView
                android:id="@+id/activity_user_avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher"
                android:scaleType="centerCrop"
                app:border_color="@android:color/primary_text_dark"
                app:border_width="2dp"
                app:corner_radius="90dp"
                app:oval="false"
                />

    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@android:color/white"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="账号"
                    android:gravity="center|bottom"
                    android:textSize="20sp"
                    />
            <EditText
                    android:id="@+id/activity_user_account"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center|bottom"
                    />
            <View
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="昵称"
                    android:gravity="center|bottom"
                    android:textSize="20sp"
                    />
            <EditText
                    android:id="@+id/activity_user_nickname"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"

                    />
            <View
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    />
        </LinearLayout>


        <LinearLayout
                android:id="@+id/activity_user_name_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="备注"
                    android:gravity="center|bottom"
                    android:textSize="20sp"
                    />
            <EditText
                    android:id="@+id/activity_user_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    />
            <View
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    />
        </LinearLayout>

    </LinearLayout>
    <Button
            android:id="@+id/activity_user_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改"
            />
</LinearLayout>
