<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fragment_contacts_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:gravity="center|left"
        android:background="@android:color/holo_blue_bright"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/fragment_contacts_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.jersuen.im.ui.view.RoundedImageView
            android:id="@+id/fragment_contacts_list_item_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            app:border_color="#96C7DA"
            app:border_width="1dp"
            app:corner_radius="90dp"
            app:oval="false" />

        <TextView
            android:id="@+id/fragment_contacts_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>